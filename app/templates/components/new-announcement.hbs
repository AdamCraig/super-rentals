{{#if addNewAnnouncement}}
  <h1>Add an announcement:</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>

      <button {{action 'saveAnnouncement' announcement}}>Save</button>
    </form>
  </div>
{{else}}
<button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
